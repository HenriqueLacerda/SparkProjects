<%= simple_form_for(@task) do |f| %>
<% if @task.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

	<ul>
		<% @task.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<%= f.association :project, collection: Project.all.collect{ |p| [p.nome, p.id]}, :label => "Projeto"%>

<%= f.association :taskType, collection: TaskType.all.collect{ |tt| [tt.nome, tt.id]}, :label => "Tipo de tarefas"%>

<%= f.input :titulo, :class => "texto", :label => "Titulo"%>

<%= f.input :descricao, :class => "texto", :label => "Descrição"%>

<%= f.input :dataInicial, :class => "data", :label => "Data inicial"%>

<%= f.input :dataFinal, :class => "data", :label => "Data final"%>

<%= f.check_box :semData, label: "Sem data" %>

<div class="actions">
	<%= f.submit %>
</div>
<% end %>
